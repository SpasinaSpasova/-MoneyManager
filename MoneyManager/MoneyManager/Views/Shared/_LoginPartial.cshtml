@using Microsoft.AspNetCore.Identity
@using MoneyManager.Core.Models.User
@using MoneyManager.Infrastructure.Data.Entities
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a  class="nav-link bg-white"  title="Manage">Hello, @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                <button type="submit" class="nav-link btn btn-link bg-white">Logout</button>
            </form>
        </li>
}
else
{
        <li class="nav-item">
            <a class="nav-link bg-white" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link bg-white" asp-controller="User" asp-action="Login">Login</a>
        </li>
}
</ul>
