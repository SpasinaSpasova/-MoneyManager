@model IEnumerable<CategoryIncomeViewModel>

@{
    ViewBag.Title = "All Income Categories";
}

<div class="nav-link bg-white">
    <h2 class="text-center">@ViewBag.Title</h2>
</div>
<div class="text-center row">
    <hr />
</div>

<div class="container">
    <div class="row">
        <div class="col-8">
            <form class="input-group-sm" asp-area="Admin" asp-controller="CategoryIncome" asp-action="Add" method="get">
                <input type="submit" value="Add New Category" class="w-100 fs-6 btn btn-primary btn-block mb-3 p-2" />
            </form>
            @if (Model.Count() != 0)
            {
                <table class="table table-bordered table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Category Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@Html.Raw(@category.Name)</td>
                                <td>
                                    <div class="inline">
                                        @using (Html.BeginForm("Edit", "CategoryIncome", FormMethod.Get))
                                        {
                                            <input type="submit" class="btn btn-warning" value="Edit" />
                                            <input name="id" type="hidden" value="@category.Id" />
                                        }
                                    </div>
                                    <div class="inline">
                                        @using (Html.BeginForm("Delete", "CategoryIncome", FormMethod.Post))
                                        {
                                            <input type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')" value="Delete" />
                                            <input name="id" type="hidden" value="@category.Id" />
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>
</div>
